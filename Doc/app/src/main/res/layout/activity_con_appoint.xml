<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".con_appoint">

  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".con_appoint">


      <ImageView
          android:id="@+id/p_img"
          android:layout_width="wrap_content"
          android:layout_height="120dp"
          android:src="@drawable/doc1"
          android:layout_marginTop="10dp"
          android:paddingRight="-50dp"
          android:paddingLeft="-50dp"
          android:layout_marginLeft="10dp"/>


      <TextView
          android:id="@+id/p_name"
          android:layout_toRightOf="@id/p_img"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:textSize="15dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="15dp"/>

      <TextView
          android:id="@+id/b_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Date:"
          android:textSize="18dp"
          android:layout_below="@id/p_name"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:textColor="#000000"
          android:layout_toRightOf="@id/p_img"/>

      <TextView
          android:id="@+id/p_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:textSize="18dp"
          android:layout_below="@id/p_name"
          android:layout_toRightOf="@id/b_date"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="15dp"/>

      <TextView
          android:id="@+id/b_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Time:"
          android:textSize="18dp"
          android:layout_below="@id/b_date"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:textColor="#000000"
          android:layout_toRightOf="@id/p_img"/>

      <TextView
          android:id="@+id/p_time"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:textSize="18dp"
          android:layout_below="@id/p_date"
          android:layout_toRightOf="@id/b_time"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="15dp"/>

      <TextView
          android:id="@+id/reason"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/p_img"
          android:text="Enter The Reason:"
          android:textSize="18dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="25dp"/>

      <EditText
          android:id="@+id/editText"
          android:layout_below="@id/reason"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="15dp"
          android:ems="10"
          android:inputType="textMultiLine"
          android:text=""/>

      <TextView
          android:id="@+id/c_fee"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Consultation fee:"
          android:textSize="18dp"
          android:layout_below="@id/editText"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:textColor="#000000"/>

      <TextView
          android:id="@+id/p_fee"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:textSize="18dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="15dp"
          android:layout_below="@id/editText"
          android:layout_toRightOf="@id/c_fee"/>

      <Button
          android:id="@+id/p_book"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="BOOK"
          android:layout_alignParentBottom="true"
          android:layout_centerInParent="true"/>
  </RelativeLayout>

</android.support.constraint.ConstraintLayout>